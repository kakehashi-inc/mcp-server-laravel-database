{
  "name": "mcp-server-laravel-database",
  "version": "0.1.0",
  "description": "MCP server for Laravel database connections with automatic .env parsing",
  "type": "module",
  "bin": "./dist/index.js",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite-node src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "yarn build"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "laravel",
    "database",
    "mysql",
    "postgresql",
    "mariadb",
    "sqlite"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kakehashi-inc/mcp-server-laravel-database.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1",
    "better-sqlite3": "^11.9.0",
    "dotenv": "^17.2.3",
    "mariadb": "^3.4.0",
    "mysql2": "^3.11.0",
    "pg": "^8.13.0",
    "ssh2": "^1.16.0",
    "winston": "^3.17.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@testcontainers/mysql": "^10.17.0",
    "@testcontainers/postgresql": "^10.17.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.10.0",
    "@types/ssh2": "^1.15.5",
    "@types/yargs": "^17.0.33",
    "typescript": "^5.7.0",
    "vite": "^5.4.0",
    "vite-node": "^2.1.0",
    "vitest": "^2.1.0"
  }
}
